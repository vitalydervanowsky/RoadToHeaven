<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/dialog_back_azs2" />

    <com.carloclub.roadtoheaven.FuelView
        android:id="@+id/fuelView"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="75dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fuel" />

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"

        android:background="#00F6E7E7"
        android:gravity="center|center_horizontal"
        android:text="Тэкст пытання"
        android:textColor="#2525C1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/buttonAnswer4"
        app:layout_constraintStart_toStartOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/buttonAnswer2"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/romb"
        android:gravity="center|center_horizontal"
        android:text="2"
        android:textColor="#F1F1ED"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/buttonAnswer3"
        app:layout_constraintEnd_toEndOf="@+id/buttonAnswer4"
        app:layout_constraintStart_toStartOf="@+id/buttonAnswer4"
        app:layout_goneMarginLeft="3dp" />

    <TextView
        android:id="@+id/buttonAnswer1"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/romb"
        android:gravity="center|center_horizontal"
        android:text="1"
        android:textColor="#F1F1ED"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonAnswer2"
        app:layout_constraintEnd_toEndOf="@+id/buttonAnswer4"
        app:layout_constraintStart_toStartOf="@+id/buttonAnswer4"
        app:layout_goneMarginLeft="3dp" />

    <TextView
        android:id="@+id/buttonAnswer3"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:background="@drawable/romb"
        android:gravity="center|center_horizontal"
        android:text="3"
        android:textColor="#F1F1ED"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/buttonAnswer4"
        app:layout_constraintEnd_toEndOf="@+id/buttonAnswer4"
        app:layout_constraintStart_toStartOf="@+id/buttonAnswer4"
        app:layout_goneMarginLeft="3dp" />

    <TextView
        android:id="@+id/buttonAnswer4"
        android:layout_width="350dp"
        android:layout_height="38dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/romb"
        android:gravity="center|center_horizontal"
        android:text="4"
        android:textColor="#F1F1ED"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_goneMarginLeft="3dp" />

    <Button
        android:id="@+id/endfill"
        android:layout_width="183dp"
        android:layout_height="35dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="20dp"
        android:background="@color/blue_button"
        android:gravity="center"
        android:text="Выйсці"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Адказвай на пытанні, каб папоўніць бензін"
        android:textColor="#2525C1"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView10" />

</androidx.constraintlayout.widget.ConstraintLayout>