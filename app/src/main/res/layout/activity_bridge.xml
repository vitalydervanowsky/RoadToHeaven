<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView30"
        android:layout_width="370dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/river" />

    <ImageView
        android:id="@+id/imageView31"
        android:layout_width="74dp"
        android:layout_height="97dp"
        app:srcCompat="@drawable/pope"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/imageStone3"
        android:layout_width="51dp"
        android:layout_height="64dp"
        app:srcCompat="@drawable/nostone"
        android:layout_marginStart="41dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@+id/imageStone4"
        app:layout_constraintTop_toTopOf="@+id/imageStone4" />

    <ImageView
        android:id="@+id/imageStone2"
        android:layout_width="51dp"
        android:layout_height="64dp"
        app:srcCompat="@drawable/nostone"
        android:layout_marginStart="41dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@+id/imageStone3"
        app:layout_constraintTop_toTopOf="@+id/imageStone3" />

    <ImageView
        android:id="@+id/imageStone5"
        android:layout_width="51dp"
        android:layout_height="64dp"
        app:srcCompat="@drawable/nostone"
        android:layout_marginStart="41dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@+id/imageStone6"
        app:layout_constraintTop_toTopOf="@+id/imageStone6" />

    <ImageView
        android:id="@+id/imageStone4"
        android:layout_width="51dp"
        android:layout_height="64dp"
        app:srcCompat="@drawable/nostone"
        android:layout_marginStart="41dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@+id/imageStone5"
        app:layout_constraintTop_toTopOf="@+id/imageStone5" />

    <ImageView
        android:id="@+id/imageStone6"
        android:layout_width="51dp"
        android:layout_height="64dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@+id/imageStone7"
        app:layout_constraintTop_toTopOf="@+id/imageStone7"
        app:srcCompat="@drawable/nostone" />

    <ImageView
        android:id="@+id/imageStone7"
        android:layout_width="51dp"
        android:layout_height="64dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nostone" />

    <ImageView
        android:id="@+id/imageStone1"
        android:layout_width="51dp"
        android:layout_height="64dp"
        app:srcCompat="@drawable/nostone"
        android:layout_marginStart="41dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@+id/imageStone2"
        app:layout_constraintTop_toTopOf="@+id/imageStone2" />

    <ImageView
        android:id="@+id/car2"
        android:layout_width="73dp"
        android:layout_height="64dp"
        android:layout_marginTop="216dp"
        android:fillAfter="true"
        android:fillEnabled="true"
        app:layout_constraintEnd_toEndOf="@+id/imageView30"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cabrioleft">

    </ImageView>

    <TextView
        android:id="@+id/buttonAdvice"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/questionTextView"
        style="@style/Text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#00F6E7E7"
        android:gravity="center|center_horizontal"
        android:text="К сожалению, Вы ошиблись(((\n  Cтоительство моста прервано"
        android:textColor="#2525C1"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/my_included_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView30"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/buttonRules"
        style="@style/Text"
        android:layout_width="38dp"
        android:layout_height="37dp"
        android:background="@drawable/empty_button"
        android:backgroundTint="#FFFDF5"
        android:gravity="center|center_horizontal"
        android:text="\?"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/buttonLang"
        style="@style/Text"
        android:layout_width="38dp"
        android:layout_height="37dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/empty_button"
        android:backgroundTint="#FFFDF5"
        android:gravity="center|center_horizontal"
        android:text="BY"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/my_included_layout"
        layout="@layout/fragment_victorina"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/questionTextView" />

    <ImageView
        android:id="@+id/imageViewRubi"
        android:layout_width="55dp"
        android:layout_height="27dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="43dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/my_included_layout"
        app:layout_constraintTop_toBottomOf="@+id/questionTextView"
        app:srcCompat="@drawable/icon_ruby" />

</androidx.constraintlayout.widget.ConstraintLayout>