<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/radio">

    <Button
        android:id="@+id/buttotPaterNoster"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:background="@color/blue_button"
        android:gravity="center"
        android:text="Ойча наш"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="161dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="35dp"
        android:background="@color/blue_button"
        android:gravity="center"
        android:text="Выход"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonAveMaria"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="196dp"
        android:background="@android:drawable/ic_dialog_info"
        android:gravity="center"
        android:text="Вітай, Марыя"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textPray"
        style="@style/Text"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="500dp"
        android:gravity="center|center_horizontal"
        android:text="Вітай, Марыя, поўная ??? Пан з Табою..."
        android:textColor="#F1F1ED"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginLeft="3dp" />

    <TextView
        android:id="@+id/word1"
        style="@style/Text"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="560dp"
        android:background="@drawable/rombgreen"
        android:gravity="center|center_horizontal"
        android:text="Ласкі"
        android:textColor="#F1F1ED"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginLeft="3dp" />

    <TextView
        android:id="@+id/word2"
        style="@style/Text"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="560dp"
        android:background="@drawable/rombgreen"
        android:gravity="center|center_horizontal"
        android:text="Езус"
        android:textColor="#F1F1ED"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/word1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginLeft="3dp" />

    <TextView
        android:id="@+id/word3"
        style="@style/Text"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="560dp"
        android:background="@drawable/rombgreen"
        android:gravity="center|center_horizontal"
        android:paddingHorizontal="8dp"
        android:text=" Благаслаўлёная "
        android:textColor="#F1F1ED"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/word2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginLeft="3dp" />

    <TextView
        android:id="@+id/word4"
        style="@style/Text"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="610dp"
        android:background="@drawable/rombgreen"
        android:gravity="center|center_horizontal"
        android:text="хлеба"
        android:textColor="#F1F1ED"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginLeft="3dp" />

    <TextView
        android:id="@+id/word5"
        style="@style/Text"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="610dp"
        android:background="@drawable/rombgreen"
        android:gravity="center|center_horizontal"
        android:text="святла"
        android:textColor="#F1F1ED"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/word4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginLeft="3dp" />

</androidx.constraintlayout.widget.ConstraintLayout>