<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="670dp"
    android:layout_height="320dp"
    android:background="@drawable/dialog">

    <TextView
        android:id="@+id/textViewBonus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="-225dp"
        android:layout_marginBottom="-5dp"
        android:gravity="center"
        android:text="+100"
        android:textColor="#603C06"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/OK"
        app:layout_constraintStart_toStartOf="@+id/OK" />

    <ImageView
        android:id="@+id/imageViewSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="350dp"
        android:layout_marginBottom="-5dp"
        app:layout_constraintBottom_toBottomOf="@+id/OK"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/icon_money" />

    <Button
        android:id="@+id/OK"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="25dp"
        android:background="@color/green_button"
        android:gravity="center"
        android:text="OK!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Текст поздравления или предупреждения или любого произвольного сообщения"
        android:textColor="#182360"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewBig" />

    <ImageView
        android:id="@+id/imageViewBig"
        android:layout_width="59dp"
        android:layout_height="53dp"
        android:layout_marginStart="392dp"
        android:layout_marginTop="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gratulation" />

    <ImageView
        android:id="@+id/imagePersona"
        android:layout_width="150dp"
        android:layout_height="270dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/carlo" />

</androidx.constraintlayout.widget.ConstraintLayout>