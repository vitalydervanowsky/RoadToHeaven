<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFEFA">

    <include
        android:id="@+id/my_included_layout"
        layout="@layout/fragment_victorina"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView17"
        app:layout_constraintStart_toStartOf="parent" />
    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="330dp"
        android:layout_height="330dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTrials"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="14"
        android:textColor="#142270"
        android:textSize="8sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/textViewQuestion"
        app:layout_constraintStart_toStartOf="@+id/textViewQuestion"
        app:layout_constraintTop_toBottomOf="@+id/textViewQuestion" />

    <com.carloclub.roadtoheaven.CustomImageView
        android:id="@+id/puzzleView14"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintStart_toStartOf="@+id/puzzleView10"
        app:layout_constraintTop_toTopOf="@+id/puzzleView13"
        app:srcCompat="@drawable/cabrioright" />

    <com.carloclub.roadtoheaven.CustomImageView
        android:id="@+id/puzzleView15"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintStart_toStartOf="@+id/puzzleView11"
        app:layout_constraintTop_toTopOf="@+id/puzzleView14"
        app:srcCompat="@drawable/cabrioright" />

    <com.carloclub.roadtoheaven.CustomImageView
        android:id="@+id/puzzleView16"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintStart_toStartOf="@+id/puzzleView12"
        app:layout_constraintTop_toTopOf="@+id/puzzleView15"
        app:srcCompat="@drawable/cabrioright" />

    <com.carloclub.roadtoheaven.CustomImageView
        android:id="@+id/puzzleView13"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@+id/puzzleView9"
        app:layout_constraintTop_toBottomOf="@+id/puzzleView9"
        app:srcCompat="@drawable/cabrioright" />

    <com.carloclub.roadtoheaven.CustomImageView
        android:id="@+id/puzzleView6"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintStart_toStartOf="@+id/puzzleView2"
        app:layout_constraintTop_toTopOf="@+id/puzzleView5"
        app:srcCompat="@drawable/cabrioright" />

    <com.carloclub.roadtoheaven.CustomImageView
        android:id="@+id/puzzleView7"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintStart_toStartOf="@+id/puzzleView3"
        app:layout_constraintTop_toTopOf="@+id/puzzleView6"
        app:srcCompat="@drawable/cabrioright" />

    <com.carloclub.roadtoheaven.CustomImageView
        android:id="@+id/puzzleView8"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintStart_toStartOf="@+id/puzzleView4"
        app:layout_constraintTop_toTopOf="@+id/puzzleView7"
        app:srcCompat="@drawable/cabrioright" />

    <com.carloclub.roadtoheaven.CustomImageView
        android:id="@+id/puzzleView9"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@+id/puzzleView5"
        app:layout_constraintTop_toBottomOf="@+id/puzzleView5"
        app:srcCompat="@drawable/cabrioright" />

    <com.carloclub.roadtoheaven.CustomImageView
        android:id="@+id/puzzleView10"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintStart_toStartOf="@+id/puzzleView6"
        app:layout_constraintTop_toTopOf="@+id/puzzleView9"
        app:srcCompat="@drawable/cabrioright" />

    <com.carloclub.roadtoheaven.CustomImageView
        android:id="@+id/puzzleView11"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintStart_toStartOf="@+id/puzzleView7"
        app:layout_constraintTop_toTopOf="@+id/puzzleView10"
        app:srcCompat="@drawable/cabrioright" />

    <com.carloclub.roadtoheaven.CustomImageView
        android:id="@+id/puzzleView12"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintStart_toStartOf="@+id/puzzleView8"
        app:layout_constraintTop_toTopOf="@+id/puzzleView11"
        app:srcCompat="@drawable/cabrioright" />

    <com.carloclub.roadtoheaven.CustomImageView
        android:id="@+id/puzzleView5"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@+id/puzzleView1"
        app:layout_constraintTop_toBottomOf="@+id/puzzleView1"
        app:srcCompat="@drawable/cabrioright" />

    <Button
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginBottom="50dp"
        android:background="@color/blue_button"
        android:gravity="center"
        android:text="Закрыть"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewQuestion"
        app:layout_constraintStart_toStartOf="@+id/textView3" />

    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="Текст вопроса"
        android:textColor="#E91E63"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@+id/imageView17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:text="Соберите мозайку, передвинув фрагменты на свои места"
        android:textColor="#FA1302"
        android:textSize="13sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/textViewQuestion"
        app:layout_constraintStart_toStartOf="@+id/textViewQuestion"
        app:layout_constraintTop_toBottomOf="@+id/textViewQuestion" />

    <com.carloclub.roadtoheaven.CustomImageView
        android:id="@+id/puzzleView1"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="@+id/imageView17"
        app:layout_constraintTop_toTopOf="@+id/imageView17"
        app:srcCompat="@drawable/cabrioright" />

    <com.carloclub.roadtoheaven.CustomImageView
        android:id="@+id/puzzleView2"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toEndOf="@+id/puzzleView1"
        app:layout_constraintTop_toTopOf="@+id/puzzleView1"
        app:srcCompat="@drawable/cabrioright" />

    <com.carloclub.roadtoheaven.CustomImageView
        android:id="@+id/puzzleView3"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toEndOf="@+id/puzzleView2"
        app:layout_constraintTop_toTopOf="@+id/puzzleView2"
        app:srcCompat="@drawable/cabrioright" />

    <com.carloclub.roadtoheaven.CustomImageView
        android:id="@+id/puzzleView4"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toEndOf="@+id/puzzleView3"
        app:layout_constraintTop_toTopOf="@+id/puzzleView3"
        app:srcCompat="@drawable/cabrioright" />

    <com.carloclub.roadtoheaven.CustomImageView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Текст вопроса"
        android:textColor="#064C83"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>