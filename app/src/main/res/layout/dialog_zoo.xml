<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dialog_back_zoo" />

    <Button
        android:id="@+id/starthelp"
        android:layout_width="183dp"
        android:layout_height="35dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="50dp"
        android:background="@color/green_button"
        android:gravity="center"
        android:text="Помочь"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView11" />

    <Button
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:background="@color/blue_button"
        android:gravity="center"
        android:text="@string/no"
        app:layout_constraintBottom_toBottomOf="@+id/starthelp"
        app:layout_constraintStart_toEndOf="@+id/starthelp"
        app:layout_constraintTop_toTopOf="@+id/starthelp" />

    <TextView
        android:id="@+id/textView"
        style="@style/Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="Стой!!! Это же Персик! Главная звезда зоопарка! Помогите его словить. Я дам Вам самое щедрое вознаграждение"
        android:textColor="#603C06"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>