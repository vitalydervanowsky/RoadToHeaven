<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF8F1">


    <TextView
        android:id="@+id/buttonAnswer4"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/romb"
        android:gravity="center|center_horizontal"
        android:text="4"
        android:textColor="#F1F1ED"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonTwist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewDraw"
        app:layout_goneMarginLeft="3dp" />


    <TextView
        android:id="@+id/buttonAnswer2"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/romb"
        android:gravity="center|center_horizontal"
        android:text="Разгадать подсказку"
        android:textColor="#F1F1ED"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/buttonAnswer3"
        app:layout_constraintEnd_toEndOf="@+id/buttonAnswer4"
        app:layout_constraintStart_toStartOf="@+id/buttonAnswer4"
        app:layout_goneMarginLeft="3dp" />

    <TextView
        android:id="@+id/buttonAnswer1"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/romb"
        android:gravity="center|center_horizontal"
        android:text="Бачу адказ"
        android:textColor="#F1F1ED"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonAnswer2"
        app:layout_constraintEnd_toEndOf="@+id/buttonAnswer4"
        app:layout_constraintStart_toStartOf="@+id/buttonAnswer4"
        app:layout_goneMarginLeft="3dp" />

    <TextView
        android:id="@+id/buttonAnswer3"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:background="@drawable/romb"
        android:gravity="center|center_horizontal"
        android:text="3"
        android:textColor="#F1F1ED"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/buttonAnswer4"
        app:layout_constraintEnd_toEndOf="@+id/buttonAnswer4"
        app:layout_constraintStart_toStartOf="@+id/buttonAnswer4"
        app:layout_goneMarginLeft="3dp" />

    <ImageButton
        android:id="@+id/buttonStart"
        android:layout_width="70dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="30dp"
        android:background="#FFEB3B"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonLeft"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_media_play"
        tools:visibility="invisible" />

    <LinearLayout
        android:id="@+id/LL"
        android:layout_width="wrap_content"
        android:layout_height="510dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </LinearLayout>

    <com.carloclub.roadtoheaven.PaintView
        android:id="@+id/viewDraw"
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="200dp"
        android:background="@drawable/back_tetris"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonLeft"
        android:layout_width="70dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="#FAF2AB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_media_rew" />

    <ImageButton
        android:id="@+id/imageButtonDown"
        android:layout_width="70dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:background="#FAF2AB"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonLeft"
        app:layout_constraintStart_toEndOf="@+id/imageButtonLeft"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <ImageButton
        android:id="@+id/imageButtonPause"
        android:layout_width="70dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:background="#FFEB3B"
        app:layout_constraintStart_toEndOf="@+id/buttonStart"
        app:layout_constraintTop_toTopOf="@+id/buttonStart"
        app:srcCompat="@android:drawable/ic_media_pause"
        tools:visibility="gone" />

    <ImageButton
        android:id="@+id/imageButtonRight"
        android:layout_width="70dp"
        android:layout_height="55dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="#FAF2AB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_media_ff" />

    <ImageButton
        android:id="@+id/imageButtonTwist"
        android:layout_width="70dp"
        android:layout_height="55dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:background="#FAF2AB"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonRight"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonRight"
        app:srcCompat="@android:drawable/ic_menu_rotate" />

    <com.carloclub.roadtoheaven.PaintView
        android:id="@+id/viewNext"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Наступны:"
        android:textColor="#504E4E"
        app:layout_constraintStart_toEndOf="@+id/viewDraw"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="За цаглінкамі схаваны адказ на пытанне: Хто спазнае міласэрнасць?"
        android:textColor="#3F51B5"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/viewDraw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewPlay"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/viewDraw"
        app:layout_constraintEnd_toStartOf="@+id/buttonAnswer1"
        app:layout_constraintStart_toStartOf="@+id/viewDraw"
        app:layout_constraintTop_toTopOf="@+id/LL"
        app:srcCompat="@drawable/play" />

</androidx.constraintlayout.widget.ConstraintLayout>