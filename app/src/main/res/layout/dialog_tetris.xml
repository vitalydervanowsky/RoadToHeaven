<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDF7"
    android:gravity="top"
    android:screenOrientation="portrait"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LL"
        android:layout_width="match_parent"
        android:layout_height="510dp"
        android:orientation="horizontal">

        <com.carloclub.roadtoheaven.PaintView
            android:id="@+id/viewDraw"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:background="@drawable/back_tetris" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Следующий:"
                android:textColor="#504E4E" />

            <com.carloclub.roadtoheaven.PaintView
                android:id="@+id/viewNext"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewScores"
                    android:layout_width="142dp"
                    android:layout_height="25dp"
                    android:background="#F8F7F7"
                    android:text="0"
                    android:textColor="#504E4E"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewSpeed"
                    android:layout_width="149dp"
                    android:layout_height="46dp"
                    android:text="0"
                    android:textColor="#504E4E"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:text="  " />

            <ImageButton
                android:id="@+id/buttonStart"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="#C1D7DF"
                app:srcCompat="@android:drawable/ic_media_play" />

            <ImageButton
                android:id="@+id/imageButtonPause"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="#C1D7DF"
                app:srcCompat="@android:drawable/ic_media_pause" />

            <TextView
                android:id="@+id/textViewBest"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#F8F7F7"
                android:text="0"
                android:textColor="#FF0202"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButtonLeft"
                    android:layout_width="66dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:background="#C1D7DF"
                    app:srcCompat="@android:drawable/ic_media_rew" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="  " />

                <ImageButton
                    android:id="@+id/imageButtonDown"
                    android:layout_width="72dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:background="#C1D7DF"
                    app:srcCompat="@android:drawable/arrow_down_float" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="  " />

                <ImageButton
                    android:id="@+id/imageButtonRight"
                    android:layout_width="68dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:background="#C1D7DF"
                    app:srcCompat="@android:drawable/ic_media_ff" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="  " />

                <ImageButton
                    android:id="@+id/imageButtonTwist"
                    android:layout_width="74dp"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:background="#C1D7DF"
                    app:srcCompat="@android:drawable/ic_menu_rotate" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:text=" " />

</LinearLayout>