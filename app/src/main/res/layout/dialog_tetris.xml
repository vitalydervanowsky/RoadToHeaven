<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.carloclub.roadtoheaven.PaintView
        android:id="@+id/viewDraw"
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:background="@drawable/back_tetris"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Наступны:"
        android:textColor="#504E4E"
        app:layout_constraintStart_toEndOf="@+id/viewDraw"
        app:layout_constraintTop_toTopOf="@+id/viewDraw" />

    <com.carloclub.roadtoheaven.PaintView
        android:id="@+id/viewNext"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/viewDraw" />

    <ImageButton
        android:id="@+id/buttonStart"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="#C1D7DF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_media_play"
        tools:visibility="gone" />

    <ImageButton
        android:id="@+id/imageButtonPause"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="#C1D7DF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_media_pause"
        tools:visibility="gone" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/imageButtonLeft"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:background="@drawable/empty_button"
        app:layout_constraintBottom_toBottomOf="@+id/viewDraw"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_media_rew" />

    <ImageButton
        android:id="@+id/imageButtonDown"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:background="@drawable/empty_button"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonLeft"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonRight"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <ImageButton
        android:id="@+id/imageButtonTwist"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:background="@drawable/empty_button"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonLeft"
        app:layout_constraintStart_toEndOf="@+id/imageButtonLeft"
        app:srcCompat="@android:drawable/ic_menu_rotate" />

    <ImageButton
        android:id="@+id/imageButtonRight"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="25dp"
        android:layout_weight="1"
        android:background="@drawable/empty_button"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonDown"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_media_ff" />

    <ImageView
        android:id="@+id/imageViewPlay"
        android:layout_width="94dp"
        android:layout_height="94dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/viewDraw"
        app:layout_constraintStart_toStartOf="@+id/viewDraw"
        app:layout_constraintTop_toTopOf="@+id/viewDraw"
        app:srcCompat="@drawable/play" />

    <TextView
        android:id="@+id/buttonAnswer2"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/romb"
        android:gravity="center|center_horizontal"
        android:text="Разгадать подсказку"
        android:textColor="#F1F1ED"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonAnswer3"
        app:layout_constraintEnd_toEndOf="@+id/buttonAnswer4"
        app:layout_constraintStart_toStartOf="@+id/buttonAnswer4"
        app:layout_goneMarginLeft="3dp"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/buttonAnswer1"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/romb"
        android:gravity="center|center_horizontal"
        android:text="Бачу адказ"
        android:textColor="#F1F1ED"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonAnswer2"
        app:layout_constraintEnd_toEndOf="@+id/buttonAnswer4"
        app:layout_constraintStart_toStartOf="@+id/buttonAnswer4"
        app:layout_goneMarginLeft="3dp" />

    <TextView
        android:id="@+id/buttonAnswer3"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:background="@drawable/romb"
        android:gravity="center|center_horizontal"
        android:text="3"
        android:textColor="#F1F1ED"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonAnswer4"
        app:layout_constraintEnd_toEndOf="@+id/buttonAnswer4"
        app:layout_constraintStart_toStartOf="@+id/buttonAnswer4"
        app:layout_goneMarginLeft="3dp"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/buttonAnswer4"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/romb"
        android:gravity="center|center_horizontal"
        android:text="4"
        android:textColor="#F1F1ED"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonTwist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewDraw"
        app:layout_goneMarginLeft="3dp"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textColor="#3F51B5"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toStartOf="@+id/viewDraw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>